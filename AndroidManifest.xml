<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="xtvapps.res.dosbox"  
      android:versionCode="221034"
      android:versionName="2.2.1-34"
      android:installLocation="auto"
      android:sharedUserId="xtvapps.res.user"
      > 
    <uses-sdk android:minSdkVersion="17" android:targetSdkVersion="23"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="xtvapps.retrobox.dosbox_provider.CONTENT"/> 
    <supports-screens android:xlargeScreens="true"/>
    <application 
        android:icon="@drawable/ic_prg" 
		android:hardwareAccelerated="true"
		android:launchMode="singleInstance"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme">
        <activity android:name="xtvapps.retrobox.dosbox.DosBoxLauncher"
                  android:label="@string/app_name"
                  android:screenOrientation="sensorLandscape" 
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="xtvapps.res.dosbox" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain"/>
            </intent-filter>
            </activity>
        <activity android:label="@string/app_name" android:name="xtvapps.retrobox.v2.dosbox.library.dosboxprefs.DosBoxPreferences"></activity>
    </application>
</manifest> 
